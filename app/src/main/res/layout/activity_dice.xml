<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiceActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar">
        </include>

        <LinearLayout
            android:id="@+id/verticalLiner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/result"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/topLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    tools:text="dé1"
                    android:textSize="32sp"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="32sp"
                    tools:text="dé2"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="32sp"
                    tools:text="dé3"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/botLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="32sp"
                    tools:text="dé4"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="32sp"
                    tools:text="dé5"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="32sp"
                    tools:text="dé6"
                    android:backgroundTint="@color/pink_pastel"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/StartDice"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="80sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            tools:text="Total" />

        <Button
            android:id="@+id/StartDice"
            android:layout_width="196dp"
            android:layout_height="75dp"
            android:layout_above="@+id/LinearButton"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/pink_pastel"
            android:text="@string/roll"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/bReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LinearButton"
            android:layout_alignBottom="@+id/StartDice"
            android:layout_alignTop="@+id/StartDice"
            android:layout_toLeftOf="@+id/StartDice"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/red_pastel"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/reset"
            />



    <LinearLayout
        android:id="@+id/LinearButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_above="@+id/LinearButton2"
        >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="2"
            android:backgroundTint="@color/purple_pastel"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="4"
            android:backgroundTint="@color/pink_pastel"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="6"
            android:backgroundTint="@color/orange_pastel"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="10"
            android:backgroundTint="@color/green_pastel"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="20"
            android:backgroundTint="@color/blue_pastel"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button100"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="100"
            android:textSize="14sp"
            android:backgroundTint="@color/purple_500"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearButton2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="12dp"
        >

        <EditText
            android:id="@+id/editValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/custom_value"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:maxLength="4"
            android:textSize="24sp"
            android:autofillHints="">
        </EditText>

        <Button
            android:id="@+id/bAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="100"
            android:backgroundTint="@color/yellow_pastel"
            android:text="@string/add">
        </Button>
    </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>